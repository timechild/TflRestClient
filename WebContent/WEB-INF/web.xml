           com.sun.jersey.spi.container.servlet.ServletContainer
    </servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>org.disruptiontables.rest</param-value>
    </init-param> 
    
    <init-param>
		<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
		<param-value>true</param-value>
	</init-param>
	
	<init-param>
    	<param-name>com.sun.jersey.spi.container.ResourceFilters</param-name>
    	<param-value>org.secnod.shiro.jersey.ShiroResourceFilterFactory</param-value>
  	</init-param>
	
    <load-on-startup>1</load-on-startup>
    
  </servlet>
  
  <servlet-mapping>
    <servlet-name>jersey-XMLExample-serlvet</servlet-name>
    <url-pattern>/v01/*</url-pattern>
  </servlet-mapping>
  
